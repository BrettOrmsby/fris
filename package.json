{
  "name": "find-replace",
  "version": "0.0.0",
  "description": "A syntax aware find and replace",
  "main": "/dist/index.js",
  "scripts": {
    "dev": "npx tsc --watch",
    "lint": "eslint --ext .js,.ts .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "jest --testPathPattern=tests/",
